# dual screen detection
exec_always ~/.config/i3/screenlayout.sh

# Set wallpaper as a solid bg
exec_always --no-startup-id hsetroot -solid '#0E1420'

# Xresources files
exec_always xrdb ~/.Xresources

# compositor (shadows, animations, etc.)
exec_always --no-startup-id compton --inactive-dim=0.1 -f

# connection editor
# needs network-manager-applet
exec --no-startup-id nm-applet

# map caps téo escape
exec_always --no-startup-id setxkbmap -option caps:escape

# lock the screen
set $Locker i3lock-fancy -f Iosevka && sleep 1

exec xautolock -time 5  -locker $Locker

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Pause mode "$mode_system"

# Screen layout switching
set $mode_screen System (m) Primary monitor, (e) External monitor, (d) Dual monitor, (c) Clone monitors
mode "$mode_screen" {
	bindsym m exec --no-startup-id xrandr --output eDP1  --primary --mode 1920x1080 --output VGA1 --off, mode "default"
	bindsym e exec --no-startup-id xrandr --output VGA1 --primary --mode 1280x1024 --output eDP1  --off, mode "default"
	bindsym d exec --no-startup-id xrandr --output VGA1 --mode 1280x1024 --pos 1920x0 --rotate normal --output VIRTUAL1 --off --output eDP1 --primary --mode 1920x1080 --pos 0x520 --rotate normal --output VGA1 --off, mode "default" 
	bindsym c exec --no-startup-id xrandr --output VGA1 --mode 1280x1024  --same-as eDP1, mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+Shift+p mode "$mode_screen"

# disk tool
exec_always --no-startup-id udiskie

# volume control
exec_always --no-startup-id pa-applet

